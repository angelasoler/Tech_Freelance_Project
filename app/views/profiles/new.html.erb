<h3>Preencha seu perfil completo para começar a criar propostas!</h3>

<% if @profile.errors.any? %>
  <% @profile.errors.full_messages.each do |error| %>
    <div><%= error %></div>
  <%end%>
<% end %>

<%= form_with model: @profile do |form| %>
  <%= form.label :full_name, 'Nome completo' %>
  <%= form.text_field :full_name %><br>
  <%= form.label :social_name, 'Nome social' %>
  <%= form.text_field :social_name %><br>
  <%= form.label :birth_date, 'Data de nascimento' %>
  <%= form.text_field :birth_date %><br>
  <%= form.label :educational_background, 'Formação' %>
  <%= form.text_field :educational_background %><br>
  <%= form.label :work_field, 'Aréa de atuação' %>
  <%= form.text_field :work_field %><br>
  <%= form.label :about_me, 'Sobre mi' %>
  <%= form.text_field :about_me %><br>
  <%= form.label :work_experience, 'Experiência' %>
  <%= form.text_field :work_experience %><br>
  <%= form.label :photo, 'Foto' %>
  <%= form.file_field :photo %><br>
  <%= form.submit 'Completar Perfil' %>
<% end %>