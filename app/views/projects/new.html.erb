<% if @project.errors.any? %>
  <% @project.errors.full_messages.each do |error| %>
    <div><%= error %></div>
  <%end%>
<% end %>

<%= form_with model: @project do |form| %>
  <%= form.label :title, 'Título:' %>
  <%= form.text_field :title %><br>
  <%= form.label :description, 'Descrição:' %>
  <%= form.text_field :description %><br>
  <%= form.label :desire_habilities, 'Habilidades desejadas:' %>
  <%= form.text_field :desire_habilities %><br>
  <%= form.label :max_hour_payment, 'Valor maximo por hora:' %>
  <%= form.number_field :max_hour_payment %><br>
  <%= form.label :deadline_for_proposals, 'Data limite para proposta:' %>
  <%= form.text_field :deadline_for_proposals %><br>
  <%= form.check_box :face_to_face %>
  <%= form.label :face_to_face, 'Presencial' %>
  <%= form.check_box :remote %>
  <%= form.label :remote, 'Remoto' %><br>
  <%= form.submit 'Cadastrar' %>
<% end %>

